<div class="page-header">
  <h1>Blog<small>(Create Your Own Blog)</small></h1>
</div>
<div class="container">
<%= form_for [:admin,@blog], :html => {:multipart => true,:class => "form-horizontal"}  do |f| %>
    <div class="form-group">
    	<%= f.label :title , :class => "col-sm-2 control-label"%>
    <div class="col-sm-10">
       	<%= f.text_field :title,:class=> "form-control"%>
    </div>
  </div>
  <div class="form-group">
    	<%= f.label :description , :class => "col-sm-2 control-label"%>
    <div class="col-sm-10">
       	<%= f.text_area :description,:class=> "form-control", :cols=>"80", :rows=>"15"%>
    </div>
  </div>
  <div class="form-group">
     <%= f.label :body,:class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body,:class=> "form-control", :cols=>"80", :rows=>"15" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success">Create</button>
    </div>
<%end%>
</div>